@model IEnumerable<BilisimKreatif.Model.Customer>
@{
    ViewData["Title"] = "Müşteriler";
}

<h2>Müşteriler</h2>
<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Yeni Müşteri</a>
</p>
<table class="table table-hover table-striped" id="tblRecords">
    <thead>
        <tr>
            <th>Tam Ad</th>
            <th>Telefon</th>
            <th>E-posta</th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td><a asp-action="Edit" class="btn btn-sm btn-success" asp-route-id="@item.Id">Düzenle</a> <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

